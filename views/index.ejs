
<h1>Welcome to my blog site</h1>

<div id="createPost">
    <a href="/create">Create a New Article</a>
</div>

<div id="allPost">
    <h3>Articles</h3>
    <ul>
        <% if (locals.array) { %>
            <% for(let i = 0; i < array.length; i++) { %>  
        <li>
            <h4><a href='article/<%= array[i].id %>'><%= array[i].title %></a></h4>
        </li>
        <% }} %>
    </ul>
</div>

